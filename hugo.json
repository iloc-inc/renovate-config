{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackageNames": ["github.com/gohugoio/hugo"],
      "groupName": "Hugo CLI",
      "enabled": true
    },
    {
      "matchManagers": ["git-submodules"],
      "groupName": "Hugo themes",
      "matchPaths": ["themes/**"],
      "enabled": true
    }
  ]
}
